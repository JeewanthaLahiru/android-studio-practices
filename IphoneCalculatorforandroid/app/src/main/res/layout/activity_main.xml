<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/calculatorExpression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:textColor="@color/ActionButtonGrey"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/calculatorResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:textColor="@color/ActionButtonGrey"
        android:maxLines="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/calC"
                style="@style/ActionButtonGreyStyle"
                android:text="C"/>
            <TextView
                android:id="@+id/calplusmunus"
                style="@style/ActionButtonGreyStyle"
                android:text="+/-"/>
            <TextView
                android:id="@+id/calPercentage"
                style="@style/ActionButtonGreyStyle"
                android:text="%"/>
            <TextView
                android:id="@+id/calDivide"
                style="@style/ActionButtonGreyStyle"
                android:text="/"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/calSeven"
                style="@style/NumberButtonStyle"
                android:text="7"/>
            <TextView
                android:id="@+id/calEight"
                style="@style/NumberButtonStyle"
                android:text="8"/>
            <TextView
                android:id="@+id/calNine"
                style="@style/NumberButtonStyle"
                android:text="9"/>
            <TextView
                android:id="@+id/calMultiply"
                style="@style/ActionButtonOrangeStyle"
                android:text="*"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/calFour"
                style="@style/NumberButtonStyle"
                android:text="4"/>
            <TextView
                android:id="@+id/calFive"
                style="@style/NumberButtonStyle"
                android:text="5"/>
            <TextView
                android:id="@+id/calSix"
                style="@style/NumberButtonStyle"
                android:text="6"/>
            <TextView
                android:id="@+id/calMinus"
                style="@style/ActionButtonOrangeStyle"
                android:text="-"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/calOne"
                style="@style/NumberButtonStyle"
                android:text="1"/>
            <TextView
                android:id="@+id/calTwo"
                style="@style/NumberButtonStyle"
                android:text="2"/>
            <TextView
                android:id="@+id/calThree"
                style="@style/NumberButtonStyle"
                android:text="3"/>
            <TextView
                android:id="@+id/calPlus"
                style="@style/ActionButtonOrangeStyle"
                android:text="+"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/calDot"
                style="@style/NumberButtonStyle"
                android:text="."/>
            <TextView
                android:id="@+id/calZero"
                style="@style/NumberButtonStyle"
                android:text="0"/>
            <TextView
                android:id="@+id/calBack"
                style="@style/NumberButtonStyle"
                android:text="Back"/>
            <TextView
                android:id="@+id/calEqual"
                style="@style/ActionButtonOrangeStyle"
                android:text="="/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>